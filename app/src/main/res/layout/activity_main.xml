<TableLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TableRow android:layout_height="match_parent">

        <EditText
            android:id="@+id/et"
            android:layout_width="0dp"
            android:layout_height="102dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:textSize="35dp" />
    </TableRow>
    <TableRow
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

        <Button
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="0.25"
            android:background="#C4F78E"
            android:text="b"
            android:textSize="30sp" />

        <Button
            android:id="@+id/clear"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="0.25"
            android:background="#C4F78E"
            android:text="C"
            android:textSize="30sp" />

        <Button
            android:id="@+id/plus"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="0.25"
            android:background="#C4F78E"
            android:text="+"
            android:textSize="30sp" />

        <Button
            android:id="@+id/minus"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="0.25"
            android:background="#A8FC51"
            android:text="-"
            android:textSize="30sp" />

</TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <Button
            android:id="@+id/b7"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="0.25"
            android:background="#C4F78E"
            android:text="7"
            android:textSize="30sp" />

        <Button
            android:id="@+id/b8"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="0.25"
            android:background="#C4F78E"
            android:text="8"
            android:textSize="30sp" />

        <Button
            android:id="@+id/b9"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="0.25"
            android:background="#C4F78E"
            android:text="9"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bmul"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="0.25"
            android:background="#A8FC51"
            android:text="x"
            android:textSize="30sp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <Button
            android:id="@+id/b4"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="0.25"
            android:background="#C4F78E"
            android:text="4"
            android:textSize="30sp" />

        <Button
            android:id="@+id/b5"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="0.25"
            android:background="#C4F78E"
            android:text="5"
            android:textSize="30sp" />

        <Button
            android:id="@+id/b6"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="0.25"
            android:background="#C4F78E"
            android:text="6"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bdiv"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="0.25"
            android:background="#A8FC51"
            android:text="/"
            android:textSize="30sp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <Button
            android:id="@+id/b1"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="0.25"
            android:background="#C4F78E"
            android:text="1"
            android:textSize="30sp" />

        <Button
            android:id="@+id/b2"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="0.25"
            android:background="#C4F78E"
            android:text="2"
            android:textSize="30sp" />

        <Button
            android:id="@+id/b3"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="0.25"
            android:background="#C4F78E"
            android:text="3"
            android:textSize="30sp" />

        <Button
            android:id="@+id/equal"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="0.25"
            android:background="#A8FC51"
            android:text="="
            android:textSize="30sp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <Button
            android:id="@+id/bdot"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="0.25"
            android:background="#A8FC51"
            android:text="."
            android:textSize="30sp" />

        <Button
            android:id="@+id/b0"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="0.25"
            android:background="#A8FC51"
            android:text="0"
            android:textSize="30sp" />

        <Button
            android:id="@+id/plusmin"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="0.25"
            android:background="#A8FC51"
            android:text="+,-"
            android:textSize="30sp" />

        <Button
            android:id="@+id/off"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="0.25"
            android:background="#A8FC51"
            android:text="off"
            android:textSize="30sp" />

    </TableRow>

</TableLayout>